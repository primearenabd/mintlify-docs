{
  "openapi": "3.1.0",
  "info": {
    "title": "OpenAPI Plant Store (Demo - jsonplaceholder)",
    "description": "Demo OpenAPI spec for recording: uses jsonplaceholder.typicode.com so Mintlify playground returns real responses for demo purposes.",
    "license": {
      "name": "MIT"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://jsonplaceholder.typicode.com"
    }
  ],
  "security": [],
  "paths": {
    "/posts": {
      "get": {
        "summary": "List posts (demo)",
        "description": "Returns example posts from jsonplaceholder for demo/testing. Use the `limit` query to illustrate parameter behaviour.",
        "parameters": [
          {
            "name": "limit",
            "in": "query",
            "description": "The maximum number of results to return (demo parameter)",
            "schema": {
              "type": "integer",
              "format": "int32"
            },
            "required": false
          }
        ],
        "responses": {
          "200": {
            "description": "A JSON array of posts (demo response from jsonplaceholder)",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Post"
                  }
                },
                "examples": {
                  "sample": {
                    "summary": "Example array",
                    "value": [
                      {
                        "userId": 1,
                        "id": 1,
                        "title": "Sample title",
                        "body": "Sample body text"
                      }
                    ]
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create post (demo)",
        "description": "Creates a new post on the demo API (jsonplaceholder will return a created response). Use this to show request body & cURL examples.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewPost"
              },
              "examples": {
                "sampleBody": {
                  "summary": "Create post example",
                  "value": {
                    "title": "Demo title",
                    "body": "Demo body",
                    "userId": 1
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Post created (demo response code from jsonplaceholder)",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Post"
                }
              }
            }
          },
          "400": {
            "description": "Bad request (demo)"
          }
        }
      }
    },
    "/posts/{id}": {
      "get": {
        "summary": "Get post by ID (demo)",
        "description": "Retrieve a single demo resource by ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of the post",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Post found (demo)",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Post"
                }
              }
            }
          },
          "404": {
            "description": "Not found (demo)"
          }
        }
      },
      "delete": {
        "summary": "Delete post (demo)",
        "description": "Delete a demo resource by ID. jsonplaceholder returns a success status for demonstration.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID of post to delete",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Deleted (demo - jsonplaceholder returns a success status)."
          },
          "404": {
            "description": "Not found (demo)"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Post": {
        "type": "object",
        "required": [
          "userId",
          "id",
          "title",
          "body"
        ],
        "properties": {
          "userId": {
            "type": "integer",
            "format": "int32",
            "description": "User identifier"
          },
          "id": {
            "type": "integer",
            "format": "int64",
            "description": "Resource identifier"
          },
          "title": {
            "type": "string",
            "description": "Post title"
          },
          "body": {
            "type": "string",
            "description": "Post body content"
          }
        }
      },
      "NewPost": {
        "type": "object",
        "required": [
          "title",
          "body",
          "userId"
        ],
        "properties": {
          "title": {
            "type": "string"
          },
          "body": {
            "type": "string"
          },
          "userId": {
            "type": "integer",
            "format": "int32"
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "error": {
            "type": "integer"
          },
          "message": {
            "type": "string"
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  }
}
